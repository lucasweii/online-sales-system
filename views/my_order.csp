<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>买多多</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="css/google_font.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="css/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="css/adminlte.min.css">
</head>
<!--
`body` tag options:

  Apply one or more of the following classes to to the body tag
  to get the desired effect

  * sidebar-collapse
  * sidebar-mini
-->
<%c++ using namespace std; %>
<%c++ auto new_order_data = @@.get<vector<unordered_map<string, string>>>("new_order_data"); %>
<%c++ auto old_order_data = @@.get<vector<unordered_map<string, string>>>("old_order_data"); %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item d-none d-sm-inline-block">
        <a href="/index_customer" class="nav-link">返回主页</a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <!-- Notifications Dropdown Menu -->
      <li class="nav-item">
        <a class="nav-link" href="/logout">
          登出
        </a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <!-- 放头像 -->
          <img src=[[ user_pic ]] class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" class="d-block">[[ user_name ]]</a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item">
            <a href="/index_customer" class="nav-link">
              <p>浏览商品</p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/my_order" class="nav-link active">
              <p>
                我的订单
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/my_cart" class="nav-link">
              <p>
                购物车
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/profile?action=display" class="nav-link">
              <p>个人信息</p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div><!-- /.col -->
          <div class="col-sm-6">
            <a class="float-right mr-5" href="#">历史账单</a>
          </div>
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-6">
            <form action="#">
              <div class="card">
                <div class="card-header">
                  未完成的订单
                </div>
                <div class="card-body">
                  <table id="new_orders" class="table table-bordered">
                    <thead>
                    <tr>
                      <th>日期</th>
                      <th>订单号</th>
                      <th>商品名称</th>
                      <th>数量</th>
                      <th>当前状态</th>
                      <th>处理</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%c++ for(auto &order : new_order_data) { %>
                    <tr>
                      <td>{% order["order_date"] %}</td>
                      <td>{% order["order_id"] %}</td>
                      <td>{% order["goods_name"] %}</td>
                      <td>{% order["num"] %}</td>
                      <td>{% order["state_str"] %}</td>
                      <td>
                        <%c++ auto state_str = order["state_str"]; %>
                        <%c++ if(state_str == "未支付") { %>
                        <a href={% "/repay?id="+order["order_id"] %} >重新支付</a>
                        <%c++ } else if(state_str =="支付成功") { %>
                         等待发货
                        <%c++ } else if(state_str =="物流中") { %>
                        <form>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name={% "process@"+order["order_id"] %} id={% "acc@"+order["order_id"] %} value="acc">
                            <label class="form-check-label" for={% "acc@"+order["order_id"] %}>确认发货</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name={% "process@"+order["order_id"] %} id={% "rej@"+order["order_id"] %} value="rej">
                            <label class="form-check-label" for={% "rej@"+order["order_id"] %}>申请退款</label>
                          </div>
                        </form>
                        <%c++ } %>
                      </td>
                    </tr>
                    <%c++ } %>
                  </table>
                </div>
              </div>
              <button type="submit" class="btn btn-primary float-right">提交处理</button>
            </form>
          </div>
          <div class="col-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">历史订单</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>日期</th>
                    <th>订单编号</th>
                    <th>商品名</th>
                    <th>商品ID</th>
                    <th>数量</th>
                    <th>状态</th>
                  </tr>
                  </thead>
                  <tbody>
                  <%c++ for(auto &order : old_order_data){ %>
                  <tr>
                    <td>{% order["order_date"] %}</td>
                    <td>{% order["order_id"] %}</td>
                    <td>{% order["goods_name"] %}</td>
                    <td>{% order["goods_id"] %}</td>
                    <td>{% order["num"] %}</td>
                    <td>{% order["state_str"] %}</td>
                  </tr>
                  <%c++ } %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- /.card -->
          </div>

          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      <!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- /.control-sidebar -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <strong>Copyright &copy; 2021</strong> wei
  </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="js/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="js/adminlte.min.js"></script>

<!-- OPTIONAL SCRIPTS -->
<script src="js/Chart.min.js"></script>
</body>
</html>
