<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>买多多</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="css/google_font.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="css/adminlte.min.css">
</head>
<!--
`body` tag options:

  Apply one or more of the following classes to to the body tag
  to get the desired effect

  * sidebar-collapse
  * sidebar-mini
-->
<%c++ using namespace std; %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/index_customer" class="nav-link">返回主页</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <!-- Notifications Dropdown Menu -->
            <li class="nav-item">
                <a class="nav-link" href="/logout">
                    登出
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <!-- 放头像 -->
                    <img src=[[ user_pic ]] class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">[[ user_name ]]</a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a href="/index_customer" class="nav-link active">
                            <p>浏览商品</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/my_order" class="nav-link">
                            <p>
                                我的订单
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/my_cart" class="nav-link">
                            <p>
                                购物车
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile?action=display" class="nav-link">
                            <p>个人信息</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>[[ shop_name ]]</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/index_customer">返回</a></li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="col-12">
                                <img src=[[ goods_pic ]] class="product-img" alt="#" id="goods_pic">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <form action={% "/goods_detail?id=" + @@.get<string>("goods_id") %}  name="myForm" method="post">
                                <h3 class="my-3">[[ goods_name ]]</h3>
                                <p>[[ goods_description ]]</p>

                                <hr>

                                <h4>价格</h4>
                                <div class="bg-gradient-danger py-2 px-3 mt-4">
                                    <h2 class="mb-0">
                                        [[ goods_price ]]
                                    </h2>
                                    <h4 class="mt-0">
                                        <small>原价: [[ old_price ]] </small>
                                    </h4>
                                </div>

                                <hr>

                                <p>销量: [[ sales_num ]]</p>

                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="number">选择数量</label>
                                        <input type="number" class="form-control" id="number" name="number" value="1"  style="width: 120px"
                                               oninput="checkStock()">
                                    </div>
                                    <div class="col-sm-3 mt-1">
                                        <b>库存</b>
                                        [[ goods_stock ]]
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <button class="btn btn-primary btn-lg btn-flat" name="purchase" value="on">
                                        <i class="fas fa-cart-plus fa-lg mr-2"></i>
                                        立即购买
                                    </button>
                                    <button class="btn btn-default btn-lg btn-flat" name="cart" value="on">
                                        <i class="fas fa-heart fa-lg mr-2"></i>
                                        添加购物车
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- /.control-sidebar -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <strong>Copyright &copy; 2021</strong> wei
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="js/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="js/adminlte.min.js"></script>
<script>
    function checkStock(){
        var x = document.getElementById("number");
        if(x.value < 1) {
            x.value = 1;
        } else if(x.value > [[ goods_stock ]]) {
            x.value = [[ goods_stock ]];
        }
    }
</script>
</body>
</html>
